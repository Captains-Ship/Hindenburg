{
    "definitions": {
        "anticheat.value": {
            "anyOf": [
                {
                    "type": "boolean"
                },
                {
                    "type": "object",
                    "properties": {
                        "penalty": {
                            "type": "string",
                            "enum": [
                                "ban",
                                "disconnect",
                                "ignore"
                            ],
                            "description": "The penalty that a player who breaks this rule will receive."
                        },
                        "strikes": {
                            "type": "number",
                            "description": "The number of strikes to break this rule before the player is penalized."
                        },
                        "banDuration": {
                            "type": "number",
                            "description": "Number of seconds to ban a player who breaks this rule for."
                        }
                    }
                }
            ]
        }
    },
    "properties": {
        "serverName": {
            "type": "string",
            "description": "The name of this Hindenburg server instance."
        },
        "serverVersion": {
            "type": "string",
            "description": "The version that this server is currently running."
        },
        "reactor": {
            "anyOf": [
                {
                    "type": "boolean"
                },
                {
                    "type": "object",
                    "properties": {
                        "mods": {
                            "type": "object",
                            "patternProperties": {
                                ".+": {
                                    "anyOf": [
                                        {
                                            "type": "object",
                                            "properties": {
                                                "version": {
                                                    "type": "string"
                                                },
                                                "required": {
                                                    "type": "boolean"
                                                },
                                                "banned": {
                                                    "type": "boolean"
                                                }
                                            }
                                        },
                                        {
                                            "type": "string"
                                        }
                                    ]
                                }
                            }
                        },
                        "allowExtraMods": {
                            "type": "boolean",
                            "description": "Whether or not clients can join with mods not required by the server."
                        },
                        "requireHostMods": {
                            "type": "boolean",
                            "description": "Whether or not joining clients are required to have the same mods as the host of the room."
                        }
                    }
                }
            ]
        },
        "anticheat": {
            "type": "object",
            "properties": {
                "checkSettings": {
                    "$ref": "#/definitions/anticheat.value",
                    "description": "Whether or not to act on invalid settings when creating a game or when updating settings in a game."
                },
                "checkObjectOwnership": {
                    "$ref": "#/definitions/anticheat.value",
                    "description": "Whether or not to act on invalid ownership of object components."
                },
                "hostChecks": {
                    "$ref": "#/definitions/anticheat.value",
                    "description": "Whether or not to check that the player is a host before accepting certain packets."
                },
                "malformedPackets": {
                    "$ref": "#/definitions/anticheat.value",
                    "description": "Whether or not to act on invalid packets."
                },
                "invalidFlow": {
                    "$ref": "#/definitions/anticheat.value",
                    "description": "Whether or not to act on an invalid flow of packets."
                },
                "massivePackets": {
                    "$ref": "#/definitions/anticheat.value",
                    "description": "Whether or not to act on large packets received from clients."
                },
                "maxConnectionsPerIp": {
                    "type": "number",
                    "description": "The maximum number of connections that any one IP can have."
                },
                "versions": {
                    "type": "array",
                    "items": [
                        {
                            "type": "string"
                        }
                    ]
                },
                "banMessage": {
                    "type": "string"
                }
            }
        },
        "cluster": {
            "type": "object",
            "properties": {
                "ip": {
                    "type": "string",
                    "description": "The IP address of this node."
                },
                "ports": {
                    "type": "array",
                    "items": [
                        {
                            "type": "number"
                        }
                    ],
                    "description": "Every port that this cluster listens on."
                }
            }
        },
        "loadbalancer": {
            "type": "object",
            "properties": {
                "clusters": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "ip": {
                                "type": "string",
                                "description": "The IP address of this node."
                            },
                            "ports": {
                                "type": "array",
                                "items": [
                                    {
                                        "type": "number"
                                    }
                                ],
                                "description": "Every port that this cluster is listening on."
                            }
                        }
                    }
                },
                "port": {
                    "type": "number",
                    "description": "The port for the load balancer to listen on."
                }
            }
        },
        "redis": {
            "type": "object",
            "properties": {
                "host": {
                    "type": "string",
                    "description": "The hostname of the redis server."
                },
                "port": {
                    "type": "number",
                    "description": "The port of the redis server."
                },
                "password": {
                    "type": "string",
                    "description": "The password for the redis server."
                }
            }
        }
    }
}